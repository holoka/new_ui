.td-pg-referral {
	&__banner {
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		height: 56vh;
	}

	&__rank {
		padding: 50px 0;

		&__box {
			&__row {
				background: #313445;
				box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
				display: flex;
				justify-content: space-between;
				padding: 15px;

				&__rank {
					display: flex;
					justify-content: center;

					&__mail {
						-webkit-box-orient: vertical;
						color: #fff;
						display: -webkit-box;
						font-size: 14px;
						-webkit-line-clamp: 2;
						overflow: hidden;
					}
				}

				&__commission {
					align-items: flex-end;
					display: flex;
					flex-direction: column;
					justify-content: center;
					margin-bottom: -8px;

					&__title {
						color: #fff;
						font-size: 13px;
						line-height: 19px;
						margin-bottom: 6px;
					}

					&__coin-name {
						color: #2fb67e;
						font-size: 14px;
						line-height: 21px;
					}
				}
			}
		}
	}

	&__loggedIn {
		padding: 25px 0 125px 0;

		&__userLogIn {
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			height: 20vh;

			/* background-color: #0000;
				opacity: .5; */
			position: relative;

			&__wrapper {
				position: absolute;
				right: 30%;
				top: 30%;

				&__desription {
					color: #fff;
					font-size: 14px;
					line-height: 21px;
					margin-bottom: 20px;
				}

				&__login {
					align-items: center;
					display: flex;
					justify-content: center;

					button {
						background-color: #2fb67e;
						border: none;
						border-radius: 5px;
						color: #fff;
						padding: 6px 20px;
						text-transform: uppercase;
					}

					p {
						color: #fff;
						font-size: 13px;
						line-height: 19px;
						margin-bottom: 0;
						margin-left: 10px;
						margin-top: 0;

						span {
							color: #00bbf9;
							cursor: pointer;
							font-size: 13px;
							line-height: 19px;
							margin-left: 10px;

							&:hover {
								border-bottom: 1px solid #fff;
							}
						}
					}
				}
			}
		}
	}

	&__detail {
		background: #262938;
		padding: 50px 0;

		&__container {
			max-width: 100%;
			width: 1040px;

			h2 {
				margin-bottom: 50px;
				text-align: center;
			}

			&__notice {
				background: #0085ff;
				padding: 26px 60px;
			}
		}
	}
}

@media screen and (max-width: 1024px) {
	#referral {
		.referral-banner {
			height: 40vh;
		}
	}
}

@media screen and (max-width: 768px) {
	#referral {
		.referral-banner {
			height: 32vh;
		}
	}
}
