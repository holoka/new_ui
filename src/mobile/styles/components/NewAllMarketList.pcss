.td-mobile-cpn-all-market {
	&__body {
		background-color: #313445;
		border-radius: 3px;
		box-shadow: 0 4px 8px -2px rgba(0, 0, 0, 0.15);
		margin: 0.875em;
		padding: 1em 0.625em;
		padding-bottom: 0.3125em;
		position: relative;

		&__wrapper {
			-ms-overflow-style: none;
			overflow-x: scroll;
			scrollbar-width: none;

			&::-webkit-scrollbar {
				display: none;
			}

			&__tabs {
				width: max-content;

				&[data-overflow='true'] {
					padding-right: 2.063rem;
				}

				.td-tabs {
					border-bottom: 1px solid #848e9c;
					display: flex;
					flex-direction: row;
					max-width: 100%;
					overflow-x: scroll;

					&[data-overflow='true'] {
						padding-right: 2rem;
					}

					&-ink-bar {
						background-color: #2fb67e;
						bottom: 0;
						height: 2px;
					}

					&-tab {
						cursor: pointer;
						font-size: 0.875rem;
						padding: 0 1em;

						&-active {
							color: #fff;
							font-weight: 500;
							position: relative;
						}
					}
				}
			}

			&__more_btn {
				align-items: center;
				background-color: #313445;
				border: 1px solid #848e9c;
				display: flex;
				height: 2.063rem;
				justify-content: center;
				position: absolute;
				right: 0.625em;
				top: 1rem;
				width: 2.063rem;
			}
		}

		&__info {
			padding-top: 0.625em;

			&__item {
				color: #848e9c;
				font-size: 0.75em;
				font-weight: 400;
				line-height: 0.875em;
				position: relative;

				&__icon {
					color: #848e9c;
					font-size: 0.75em;
					padding-right: 0.84em;

					&--active-up {
						svg {
							&:first-child {
								color: #fff !important;
							}
						}
					}

					&--active-down {
						svg {
							&:last-child {
								color: #fff !important;
							}
						}
					}

					&:first-child {
						padding-right: 0;
					}

					&:last-child {
						padding-right: 0;
					}

					svg {
						&:last-child {
							transform: translateY(-100%);
						}
					}
				}
			}
		}

		&__markets {
			&__desc {
				color: white;
				font-size: 0.875em;
				font-weight: 500;
				line-height: 1.14em;
				padding-bottom: 0.36em;
				padding-top: 0.36em;
			}

			&__item {
				border-bottom: 1px solid #848e9c8c;
				font-weight: 500;
				height: 3.125em;
				line-height: 1em;

				&__pairs {
					width: 6.875em;

					&__first {
						color: white;
						font-size: 0.875em;
						font-weight: 500;
						line-height: 1.17em;
					}

					&__second {
						font-size: 0.625em;
						font-weight: 400;
						line-height: 1.17em;
					}

					&__vol {
						font-size: 0.75em;
					}

					&__margin {
						background-color: #ff6400;
						border-radius: 1px;
						color: white;
						font-size: 0.4375em;
						font-weight: 400;
						line-height: 0.5em;
						margin-left: 0.3125em;
						padding: 0.0625em 0.125em;
					}
				}

				&__price {
					width: 5.625em;

					&__volume {
						color: white;
						font-size: 0.875em;
						font-weight: 700;
						line-height: 1.17em;
					}

					&__volume-last {
						font-size: 0.75em;
					}
				}

				&__btn {
					button {
						background-color: #2fb67e !important;
						color: white;
						font-size: 0.875em !important;
						font-weight: 500;
						line-height: 1.17em;
						width: 5em;
					}

					&--false {
						button {
							background-color: #e84946 !important;
						}
					}
				}
			}
		}
	}
}
